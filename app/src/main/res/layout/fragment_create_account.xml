<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nikolas.messagernik.CreateAccountFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/fragment_create_account_image_view_user_cover"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/avatar_img"
       />
    <EditText
        android:id="@+id/fragment_create_account_edt_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/fragment_create_account_edt_first_name_string"/>

    <EditText
        android:id="@+id/fragment_create_account_edt_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/fragment_create_account_edt_last_name_string"/>
    <EditText
        android:id="@+id/fragment_create_account_edt_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint = "@string/fragment_create_account_edt_login_string"/>
    <EditText
        android:id="@+id/fragment_create_account_edt_password"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:hint="@string/fragment_create_account_edt_password_string"/>
    <EditText
        android:id="@+id/fragment_create_account_edt_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="@string/fragment_create_account_edt_confirm_password_string"/>
    <Button
        android:id="@+id/fragment_create_account_btn_create_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fragment_create_account_btn_create_account_string"/>
</LinearLayout>
</FrameLayout>
