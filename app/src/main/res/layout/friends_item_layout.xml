<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/conversation_item_template"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#E0F2F1">

    <com.example.nikolas.messagernik.entity.system.ImageProgressViewScale
        android:id="@+id/fragment_friends_item_friend_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="#E0F2F1"
        android:padding="5dp" />

    <TextView
        android:id="@+id/fragment_friends_item_friend_name_text_view"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/fragment_friends_item_friend_image" />

</RelativeLayout>