<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.nikolas.messagernik.MainPageFragment">

    <com.example.nikolas.messagernik.entity.system.ImageViewWithProgressBarView
        android:id="@+id/fragment_profile_imageview_with_progressbar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.example.nikolas.messagernik.entity.system.ImageViewWithProgressBarView>

    <TextView
        android:id="@+id/fragment_main_page_txt_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/fragment_main_page_txt_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/fragment_main_page_txt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>

