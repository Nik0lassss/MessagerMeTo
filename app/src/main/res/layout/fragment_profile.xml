    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.nikolas.messagernik.MainPageFragment"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/fragment_main_page_image_view_avatar"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/fragment_main_page_txt_first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/fragment_main_page_txt_last_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/fragment_main_page_txt_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

