<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_item_template"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/message_images"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.example.nikolas.messagernik.entity.system.ImageProgressViewScale
            android:id="@+id/message_image_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="center"
            android:layout_alignParentLeft="true" />

        <!--<ImageView-->
            <!--android:id="@+id/MessageImageSocial"-->
            <!--android:layout_width="25px"-->
            <!--android:layout_height="25px"-->
            <!--android:background="#0000ff"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:src="@drawable/FbIcon" />-->
    </RelativeLayout>
    <com.example.nikolas.messagernik.entity.system.ImageProgressViewScale
        android:id="@+id/message_image_reciever"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center"
        android:layout_alignParentRight="true" />
    <TextView
        android:id="@+id/message_sender_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_toRightOf="@id/message_images"
        android:paddingLeft="4dp" />
        <!--android:text="Sender.FistName Sender.LastName" />-->
    <TextView
        android:id="@+id/message_last_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/message_images"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:layout_below="@id/message_sender_info"
        android:text="lastMessage" />
    <TextView
        android:id="@+id/message_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/message_sender_info"
        android:gravity="right"
        android:text="10-11-2014 09:40:22"
        android:layout_below="@id/message_last_content" />
</RelativeLayout>